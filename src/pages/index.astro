---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import hc2016 from '../assets/hc2016.svg';
import hc2017 from '../assets/hc2017.svg';
import hc2018 from '../assets/hc2018.svg';
import hc2019 from '../assets/hc2019.svg';
import hc2020 from '../assets/hc2020.png';
import hc2021 from '../assets/hc2021.svg';
import hc2022 from '../assets/hc2022.png';
import hc2023 from '../assets/hc2023.png';

import event1 from "../assets/eventImages/1.jpg";
import event2 from "../assets/eventImages/2.jpg";
import event3 from "../assets/eventImages/3.jpg";
import event4 from "../assets/eventImages/4.jpg";
import event5 from "../assets/eventImages/5.jpg";
import event6 from "../assets/eventImages/6.jpg";

const pastEvents = [
  {
    id: 1,
    title: "Hack Cambridge",
    date: "30-31 January 2016",
    image: hc2016,
    archiveUrl: "https://web.archive.org/web/20160308091752/https://www.hackcambridge.com/"
  },
  {
    id: 2,
    title: "Hack Cambridge Recurse",
    date: "28-29 January 2017",
    image: hc2017,
    archiveUrl: "https://web.archive.org/web/20170511182222/https://hackcambridge.com/"
  },
  {
    id: 3,
    title: "Hack Cambridge Ternary",
    date: "20-21 January 2018",
    image: hc2018,
    archiveUrl: "https://web.archive.org/web/20180325001204/https://hackcambridge.com/"
  },
  {
    id: 4,
    title: "Hack Cambridge 4D",
    date: "19-20 January 2019",
    image: hc2019,
    archiveUrl: "https://web.archive.org/web/20181222132850/https://hackcambridge.com/"
  },
  {
    id: 5,
    title: "Hack Cambridge 101",
    date: "2020",
    image: hc2020,
    archiveUrl: "https://web.archive.org/web/20201030192211/https://hack-cambridge-101.devpost.com/project-gallery"
  },
  {
    id: 6,
    title: "Hex Cambridge",
    date: "January 23-24th 2021",
    image: hc2021,
    archiveUrl: "https://web.archive.org/web/20201207155311/https://hackcambridge.com/"
  },
  {
    id: 7,
    title: "Hack Cambridge Atlas",
    date: "22-23 Jan 2022",
    image: hc2022,
    archiveUrl: "https://web.archive.org/web/20211208145242/https://hackcambridge.com/"
  },
  {
    id: 8,
    title: "Hack Cambridge Spyder",
    date: "Oct-Dec 2023",
    image: hc2023,
    archiveUrl: "https://web.archive.org/web/20231118092828/https://hackcambridge.com/"
  }
];

const galleryPhotos = [
  event1,
  event2,
  event3,
  event4,
  event5,
  event6
];
---

<Layout>
  <main class="min-h-screen bg-white">
    <!-- Header Section -->
    <section class="border-b-2 border-black">
      <div class="max-w-6xl mx-auto px-4 py-16 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-black mb-8">
          The Hack Cambridge Foundation
        </h1>
        <div class="max-w-2xl">
          <p class="text-lg text-black leading-relaxed mb-4">
            The Hack Cambridge Foundation ran the Hack Cambridge hackathon from 2016 to 2023. Its mission was to inspire students to build whatever they wanted in a weekend. It was the official hackathon of the University of Cambridge and hosted hundreds of students from all over the world each and every year.
          </p>
          <p class="text-md text-black leading-relaxed mb-4">
            Hack Cambridge was built by a student volunteers for the sole purpose of helping other students do what they love. It was made possible by the generous support of their sponsors, who provided funding, mentorship, and career opportunities to the attendees.
          </p>
          <p class="text-md text-black leading-relaxed mb-4">
            The Hack Cambridge Foundation is now closed. The team loved every minute of running Hack Cambridge. 
          </p>
          <p class="text-md text-black leading-relaxed">
            For more historical information, view our past events below or our <a href="https://www.facebook.com/hackcambridge" target="_blank" rel="noopener noreferrer" class="text-black underline hover:no-underline">Facebook page</a>.
          </p>
        </div>
      </div>
    </section>

    <!-- Past Events Section -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-black mb-12">
          Past Events
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
          {pastEvents.map((event) => (
            <div class="bg-white border-2 border-black p-6">
              <div class="flex items-start gap-4">
                <Image 
                  src={event.image} 
                  alt={""}
                  class="w-20 h-20 object-contain flex-shrink-0"
                />
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-black mb-2">
                    {event.title}
                  </h3>
                  <p class="text-black mb-4">
                    {event.date}
                  </p>
                  <a 
                    href={event.archiveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-black underline hover:no-underline"
                  >
                    View Archive â†’
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Photo Gallery Section -->
    <section class="py-16 border-t-2 border-black">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4">
          {galleryPhotos.map((photo, index) => (
            <div class="aspect-square">
              <Image 
                src={photo} 
                alt={"Photo of Hack Cambridge event"}
                class="w-full h-full object-cover border-2 border-black"
              />
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>